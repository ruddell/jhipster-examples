    <!--
        Added the constraints for entity Topic.
    -->
    <changeSet id="20180711113349-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="topics_id"
                                 baseTableName="topic_post"
                                 constraintName="fk_topic_post_topics_id"
